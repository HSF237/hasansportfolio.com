    <!-- SCRIPTS -->
    <script>
        gsap.registerPlugin(ScrollTrigger);

        const splitText = (el) => {
            const text = el.innerText;
            el.innerHTML = text.split("").map(char => `<span class="char-reveal"><span>${char === " " ? "&nbsp;" : char}</span></span>`).join("");
        };

        window.addEventListener("load", () => {
            gsap.to("body", { opacity: 1, duration: 1.2, ease: "power3.out" });

            gsap.to(".scroll-progress", {
                width: "100%", ease: "none",
                scrollTrigger: { scrub: 0.3 }
            });

            const dot = document.querySelector(".cursor-dot");
            const circle = document.querySelector(".cursor-circle");
            if (window.matchMedia("(pointer: fine)").matches) {
                window.addEventListener("mousemove", (e) => {
                    gsap.to(dot, { x: e.clientX - 4, y: e.clientY - 4, duration: 0.2, ease: "power2.out" });
                    gsap.to(circle, { x: e.clientX - 20, y: e.clientY - 20, duration: 0.5, ease: "power3.out" });

                    // Emit particles
                    for (let i = 0; i < 2; i++) {
                        createParticle(e.clientX, e.clientY);
                    }
                });
            }

            // --- CURSOR BUBBLE SYSTEM ---
            const canvas = document.getElementById('cursor-canvas');
            const ctx = canvas.getContext('2d');
            let particles = [];

            const resizeCanvas = () => {
                canvas.width = window.innerWidth;
                canvas.height = window.innerHeight;
            };
            window.addEventListener('resize', resizeCanvas);
            resizeCanvas();

            class Particle {
                constructor(x, y) {
                    this.x = x;
                    this.y = y;
                    this.size = Math.random() * 5 + 2;
                    this.speedX = (Math.random() - 0.5) * 2;
                    this.speedY = (Math.random() - 0.5) * 2;
                    this.color = Math.random() > 0.5 ? 'rgba(212, 175, 55, 0.4)' : 'rgba(255, 255, 255, 0.2)';
                    this.alpha = 1;
                    this.life = 1;
                }
                update() {
                    this.x += this.speedX;
                    this.y += this.speedY;
                    this.size += 0.2;
                    this.life -= 0.015;
                    this.alpha = Math.max(0, this.life);
                }
                draw() {
                    ctx.beginPath();
                    ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
                    ctx.fillStyle = this.color.replace(')', `, ${this.alpha})`).replace('rgba', 'rgba');
                    // Optimization: use a fixed color string logic
                    const colorParts = this.color.split(',');
                    ctx.fillStyle = `${colorParts[0]},${colorParts[1]},${colorParts[2]}, ${this.alpha * 0.3})`;
                    ctx.strokeStyle = `${colorParts[0]},${colorParts[1]},${colorParts[2]}, ${this.alpha * 0.6})`;
                    ctx.lineWidth = 1;
                    ctx.fill();
                    ctx.stroke();
                }
            }

            const createParticle = (x, y) => {
                particles.push(new Particle(x, y));
            };

            const handleParticles = () => {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                for (let i = 0; i < particles.length; i++) {
                    particles[i].update();
                    particles[i].draw();
                    if (particles[i].life <= 0) {
                        particles.splice(i, 1);
                        i--;
                    }
                }
            };

            gsap.ticker.add(handleParticles);

            document.querySelectorAll(".hero-title").forEach(t => splitText(t));
            const heroTl = gsap.timeline({ delay: 0.5 });
            heroTl.to(".hero-title .char-reveal span", { y: "0%", stagger: 0.03, duration: 1.5, ease: "expo.out" })
                .from(".hero-meta", { opacity: 0, y: 30, duration: 1.5, ease: "power4.out" }, "-=1");

            const mm = gsap.matchMedia();
            mm.add("(min-width: 769px)", () => {
                const track = document.querySelector(".h-track");
                const sections = gsap.utils.toArray(".h-panel");
                const scrollTween = gsap.to(track, {
                    x: () => -(track.scrollWidth - window.innerWidth),
                    ease: "none",
                    scrollTrigger: {
                        trigger: "#projects-wrapper", pin: true, scrub: 1,
                        start: "top top", end: () => `+=${track.scrollWidth}`, invalidateOnRefresh: true
                    }
                });
                sections.forEach((panel) => {
                    const card = panel.querySelector(".card");
                    if (card) {
                        ScrollTrigger.create({
                            trigger: panel, containerAnimation: scrollTween,
                            start: "left center", end: "right center",
                            toggleClass: { targets: card, className: "active" },
                        });
                    }
                });
            });

            gsap.from(".big-stat", { textContent: 0, duration: 2.5, ease: "power2.inOut", snap: { textContent: 1 }, scrollTrigger: { trigger: ".big-stat", start: "top 80%" } });
            gsap.to(".age-narrative", { opacity: 1, y: 0, duration: 1.5, ease: "expo.out", scrollTrigger: { trigger: ".big-stat", start: "top 70%" } });
            gsap.from(".manifesto-text .line", { y: 100, opacity: 0, stagger: 0.3, duration: 2, ease: "power4.out", scrollTrigger: { trigger: ".manifesto-sec", start: "top 60%" } });

            const entryTl = (trig, targets) => {
                gsap.from(targets, { y: 60, opacity: 0, duration: 1.5, stagger: 0.2, ease: "power3.out", scrollTrigger: { trigger: trig, start: "top 75%" } });
            };
            entryTl(".profile-grid", ".p-col");
            entryTl(".process-row", ".process-item");
            entryTl(".principles-grid", ".principle-item");

            gsap.to(".t-progress", { height: "100%", ease: "none", scrollTrigger: { trigger: ".t-grid", start: "top center", end: "bottom center", scrub: 0.3 } });
            gsap.utils.toArray(".t-item").forEach(item => { ScrollTrigger.create({ trigger: item, start: "top 60%", end: "bottom 60%", toggleClass: "active" }); });

            const quotes = gsap.utils.toArray(".quote-text");
            let qIndex = 0;
            gsap.set(quotes, { opacity: 0, y: 20 });
            gsap.set(quotes[0], { opacity: 1, y: 0 });
            setInterval(() => {
                const current = quotes[qIndex];
                qIndex = (qIndex + 1) % quotes.length;
                const next = quotes[qIndex];
                gsap.to(current, { opacity: 0, y: -20, duration: 0.8, ease: "power3.inOut" });
                gsap.fromTo(next, { opacity: 0, y: 20 }, { opacity: 1, y: 0, duration: 0.8, ease: "power3.inOut" });
            }, 3000);

            const registryCards = document.querySelectorAll(".registry-card");
            registryCards.forEach(card => {
                card.addEventListener("mousemove", (e) => {
                    const rect = card.getBoundingClientRect();
                    const x = ((e.clientX - rect.left) / rect.width) * 100;
                    const y = ((e.clientY - rect.top) / rect.height) * 100;
                    card.style.setProperty("--x", `${x}%`);
                    card.style.setProperty("--y", `${y}%`);
                    const centerX = rect.left + rect.width / 2;
                    const centerY = rect.top + rect.height / 2;
                    const rotateX = (e.clientY - centerY) / 15;
                    const rotateY = (centerX - e.clientX) / 15;
                    gsap.to(card, { rotateX: rotateX, rotateY: rotateY, scale: 1.02, duration: 0.6, ease: "power2.out" });
                });
                card.addEventListener("mouseleave", () => {
                    gsap.to(card, { rotateX: 0, rotateY: 0, scale: 1, duration: 0.8, ease: "elastic.out(1, 0.5)" });
                });
            });

            // 12. Master Registry Entrance (Robust Reveal)
            const revealRegistry = () => {
                const cards = gsap.utils.toArray(".registry-card");
                if (cards.length > 0) {
                    gsap.fromTo(cards,
                        { y: 100, opacity: 0 },
                        {
                            y: 0,
                            opacity: 1,
                            stagger: 0.1,
                            duration: 1.2,
                            ease: "power4.out",
                            scrollTrigger: {
                                trigger: "#registry",
                                start: "top 85%",
                                toggleActions: "play none none none"
                            }
                        }
                    );
                }

                const impactItems = gsap.utils.toArray(".impact-item");
                if (impactItems.length > 0) {
                    gsap.fromTo(impactItems,
                        { scale: 0.8, opacity: 0 },
                        {
                            scale: 1,
                            opacity: 1,
                            stagger: 0.1,
                            duration: 1,
                            ease: "back.out(1.7)",
                            scrollTrigger: {
                                trigger: ".impact-container",
                                start: "top 90%"
                            }
                        }
                    );
                }
            };

            revealRegistry();

            // Force a refresh after a short delay to fix offset issues from pinning
            setTimeout(() => {
                ScrollTrigger.refresh();
            }, 500);

            const pContainer = document.getElementById("achieveParticles");
            if (pContainer) {
                for (let i = 0; i < 60; i++) {
                    const p = document.createElement("div");
                    p.className = "p-particle";
                    const size = Math.random() * 4 + 1;
                    p.style.width = `${size}px`; p.style.height = `${size}px`;
                    p.style.left = `${Math.random() * 100}%`; p.style.top = `${Math.random() * 100}%`;
                    pContainer.appendChild(p);
                    gsap.to(p, { y: (Math.random() - 0.5) * 400, x: (Math.random() - 0.5) * 400, opacity: Math.random() * 0.5, duration: Math.random() * 10 + 10, repeat: -1, yoyo: true, ease: "sine.inOut" });
                }
            }

            const form = document.querySelector(".contact-form");
            form.addEventListener("submit", (e) => {
                e.preventDefault();
                const name = document.getElementById("name").value;
                const email = document.getElementById("email").value;
                const msg = document.getElementById("msg").value;
                const formattedMsg = `*/// INCOMING TRANSMISSION ///*\n\n*USER:* ${name}\n*EMAIL:* ${email}\n--------------------------------\n*MESSAGE:*\n${msg}\n--------------------------------\n*/// END OF STREAM ///*`.trim();
                window.open(`https://wa.me/919496829330?text=${encodeURIComponent(formattedMsg)}`, '_blank');
            });
        });
    </script>
</body>

</html>
